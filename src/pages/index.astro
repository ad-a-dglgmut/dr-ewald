---
import Navbar from "../components/Navbar";
import img1 from "../img/img1.jpg";
import img2 from "../img/img2.jpg";
import img3 from "../img/img3.jpg";
import img4 from "../img/img4.jpg";
import email from "../img/email-white.png"
import facebook from "../img/facebook-white.png"
import phone from "../img/phone-call-white.png"
import instagram from "../img/instagram-white.png"
import gzm from "../img/gzm-praxis.png"
import pointer from "../img/POINTER.png"
import { DATA_DEU } from "@/service/data";

import logoSmall from "../img/logosmall.png"
const lang = DATA_DEU
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={logoSmall} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    
    <title>Dr. Nadica Ewald</title>
  </head>
  <body class=" overflow-x-hidden overflow-y-hidden">
    <Navbar client:only />
      

    <div
      id="animation-carousel"
      class="relative w-full mt-[92px]"
      data-carousel="slide"
    >
      <!-- Carousel wrapper -->
      <div class="relative h-[92vh] overflow-hidden">
        <!-- Item 1 -->
        <div class="hidden duration-1000 ease-in-out" data-carousel-item>
          <img
            src={img1}
            class="absolute block w-full -translate-x-1/2 object-cover h-full -translate-y-1/2 top-1/2 left-1/2"
            alt="..."
          />
        </div>
        <!-- Item 2 -->
        <div
          class="hidden duration-1000 ease-in-out"
          data-carousel-item="active"
        >
          <img
            src={img2}
            class="absolute block w-full -translate-x-1/2 object-cover h-full -translate-y-1/2 top-1/2 left-1/2"
            alt="..."
          />
        </div>
        <!-- Item 3 -->
        <div class="hidden duration-1000 ease-in-out" data-carousel-item>
          <img
            src={img3}
            class="absolute block w-full -translate-x-1/2 object-cover h-full -translate-y-1/2 top-1/2 left-1/2"
            alt="..."
          />
        </div>
        <!-- Item 4 -->
        <div class="hidden duration-1000 ease-in-out" data-carousel-item>
          <img
            src={img4}
            class="absolute block w-full -translate-x-1/2 object-cover h-full -translate-y-1/2 top-1/2 left-1/2"
            alt="..."
          />
        </div>
      </div>
    </div>
    <div
      class="absolute mx-3 md:mx-0 text-white z-20 md:top-3/4 top-1/3 md:left-10 font-serif md:justify-normal justify-center w-full flex"
    >
    <div class=" block">
      <h1 class=" text-orange-500 text-xl lg:text-3xl font-bold drop-shadow-xl">
    {lang.headersubtitle1}
      </h1>
      <br />
      <p class="text-5xl lg:text-8xl font-bold drop-shadow-xl">Dr. Ewald</p>
      <p class ="text-xl italic drop-shadow-xl">
        {lang.headersubtitle2}
      </p>
    </div>
    </div>
    <div class="absolute hidden md:block text-white z-20 bottom-60 right-10 font-serif ">
      

          <div class="flex justify-end">Bahnhofstrasse 21, 9100 Herisau<img class=" h-7 w-7 ml-5 mb-10" src={pointer} alt=""></div>
          <div class="flex justify-end">dr.ewald@ganzheitliche-zahnaerztin.ch<img class=" h-7 w-7 ml-5 mb-10" src={email} alt=""></div>
          <div class="flex justify-end">Zahnpraxis Dr.Ewald<img class=" h-7 w-7 ml-5 mb-10" src={facebook} alt=""></div>
          <div class="flex justify-end">071 351 72 09<img class=" h-7 w-7 ml-5 mb-10" src={phone} alt=""></div>
          <div class="flex justify-end">@zahnpraxis<img class=" h-7 w-7 ml-5 mb-10" src={instagram} alt=""></div>
      
    </div>
    <div class="absolute z-20 top-32 right-10">
      <a href="http://www.gzm.org/"><img src={gzm} alt=""/></a>
    </div>
  </body>
  
  <script
    is:inline
    src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
  ></script>
</html>